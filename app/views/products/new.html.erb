
<h1> <%= current_category.name  %>  </h1>

<div class="row">

	<div class="span4 offset3">
		<%= form_for(@product) do |f| %>
		<%= render 'shared/error_messages',object: f.object %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :cost, "Price" %>
		<%= f.text_field :cost %>
		<%= f.label :image_url %>
		<%= f.text_field :image_url %>
		<%= f.submit "Add New Product" , class:"btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>