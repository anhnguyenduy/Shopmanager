<h1> New Category </h1>
<div class=" hero-unit">
	<aside>
		<div>
			<%= form_for(@category) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.submit "Add", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
</aside>
</div>